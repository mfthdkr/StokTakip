@using StokTakip.Models.EntityFramework
@model List<Kategoriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Kategori Listesi</h2>

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Kategori Id</th>
            <th>Kategori Adı</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.KategoriId</td>
                <td>@item.KategoriAd</td>
                <td>
                    <a href="@Url.Action("Delete", "Kategoriler", new {categoryId = @item.KategoriId})" class=" btn btn-danger">Sil</a>
                    <a href="@Url.Action("Update", "Kategoriler", new {categoryId = @item.KategoriId})" class=" btn btn-success">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Kategoriler/Create" class="btn btn-primary">Yeni Kategori Ekle</a>


<script src="~/Scripts/DataTables/dataTables.bootstrap4.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-colvis-1.3.1/b-flash-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/sc-1.4.2/se-1.2.2/datatables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#tbl1').DataTable({
            language: {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
            }
        });
    });
</script>