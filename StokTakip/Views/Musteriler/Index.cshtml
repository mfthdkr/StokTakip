
@model List<StokTakip.Models.EntityFramework.Musteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Index", "Musteriler", FormMethod.Get))
{
    <p>
        Müşteri Adı: @Html.TextBox("searchingKey")
        <input type="submit" value="Ara"/>
    </p>
}


<table class="table table-bordered">
    <tr>
        <th>Müşteri Id</th>
        <th>Müşteri Adı</th>
        <th>Müşteri Soyadı</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MusteriId</td>
                <td>@item.MusteriAd</td>
                <td>@item.MusteriSoyad</td>
                <td>
                    <a href="@Url.Action("Delete","Musteriler",new {customerId =@item.MusteriId})" class=" btn btn-danger">Sil</a>
                    <a href="@Url.Action("Update","Musteriler",new {customerId =@item.MusteriId})" class=" btn btn-success">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Musteriler/Create" class="btn btn-primary">Yeni Müşteri Ekle</a>
